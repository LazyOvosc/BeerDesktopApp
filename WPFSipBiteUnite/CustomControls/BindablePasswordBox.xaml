<UserControl x:Class="WPFSipBiteUnite.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFSipBiteUnite.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="28" d:DesignWidth="300">
    <PasswordBox x:Name="TxtPasswordBox"
                 FontSize="14"
                 FontWeight="Medium"
                 FontFamily="Montserrat"                            
                 Foreground="{StaticResource NeutralWhiteBrush}"
                 CaretBrush="{StaticResource Neutral400Brush}"
                 Background="Transparent"
                 BorderThickness="0,0,0,2"
                 VerticalContentAlignment="Center"
                 Padding="0,0,0,0">
        <PasswordBox.BorderBrush>
            <SolidColorBrush Color="{DynamicResource Neutral400}"/>
        </PasswordBox.BorderBrush>
        
    </PasswordBox>
</UserControl>
